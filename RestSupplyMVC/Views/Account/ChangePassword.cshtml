
@model RestSupplyMVC.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="login-form-body">
    <div class="row">
        <div class="col-md-8">
            <div class="container">
                <div class="login-form">
                    <div class="main-div">

                        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel">
                                <h2>Change your password</h2>
                                <p>Please type in your current password and the requested password</p>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.PasswordFor(m => m.CurrentPassword, new { @id = "inputPassword", @class = "form-control", @placeholder = "Current Password" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @id = "inputPassword", @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirmPassword", @class = "form-control", @placeholder = "Confirm Password" })
                            </div>
                            <div class="login-button">
                                <input type="submit" class="btn btn-primary" value="Change Password" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>