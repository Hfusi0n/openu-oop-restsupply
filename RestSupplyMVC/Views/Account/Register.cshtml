@model RestSupplyMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>


<div class="login-form-body">
    <div class="row">
        <div class="col-md-8">
            <div class="container">
                <div class="login-form">
                    <div class="main-div">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel">
                                <h2>Create a new account.</h2>
                                <p>Please enter your email and password</p>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @id = "inputEmail", @class = "form-control", @placeholder = "Email Address" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @id = "inputPassword", @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirmPassword", @class = "form-control", @placeholder = "Confirm Password" })
                            </div>
                            <div class="login-button">
                                <input type="submit" class="btn btn-primary" value="Register" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

@section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
