
@model RestSupplyMVC.ViewModels.CustomerOrderViewModel

@{
    ViewBag.Title = "Generate Customer Order";
}

<h2>Generate Customer Order</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">

        @for (int i = 0; i < 3; i++)
        {
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]" disabled="disabled">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                    <!-- menu items selection for the user-->
                    @Html.DropDownListFor(x => Model.SelectedMenuItem, Model.MenuItems, htmlAttributes: new { @class = "form-control", id = "MenuItem" })
                    <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </span>
            </div>
        }

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>

        @Html.ValidationMessageFor(x => x.SelectedMenuItem, "", new { @class = "text-danger" })
    </div>

}


@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
