@model RestSupplyMVC.ViewModels.IngredientViewModel

@{
    ViewBag.Title = "Ingredient Details";
}

<h2>Ingredient Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                        <tr>
                            <td><b>Ingredient Name:</b> @Model.Name</ td >
                            <td><b>Ingredient Unit:</b> @Model.Unit </ td >
                            <td> @Html.ActionLink("Edit Basic Info", "Edit", new { id = Model.IngredientId })</ td >

                        </tr>
                    <tr>
                        <td colspan="3">
                            <table class="table table-bordered">
                                <tbody>
                                @if (Model.AllIngredientSuppliersList == null || !Model.AllIngredientSuppliersList.Any())
                                {
                                    <h3>No Suppliers Currently supply this Ingredients!</h3>
                                }
                                else
                                {
                                    <tr>
                                        <th>Supplier Name</th>
                                        <th>Supplier Address</th>
                                        <th>Supplier Contact Phone</th>


                                    </tr>

                                    foreach (var ingredient in Model.AllIngredientSuppliersList)
                                     {
                                         <tr>
                                             <td>@ingredient.SupplierName</td>
                                             <td>@ingredient.Address</td>
                                             <td>@ingredient.Phone</td>
                                         </tr>
                                     }
                                }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Assign Ingredient to Supplier here", "Index","Suppliers", null,null) 

</p>
