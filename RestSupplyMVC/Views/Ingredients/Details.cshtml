@model RestSupplyMVC.ViewModels.IngredientViewModel

@{
    ViewBag.Title = "Ingredient Details";
}

<h2>Ingredient Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                    <tr>
                        <td> @Model.Name :Ingredient Name</ td >
                        <td> @Model.Unit :Ingredient Unit</ td >


                    </tr>
                    <tr>
                        <td colspan="3">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th>Supplier Name</th>
                                    <th>Supplier Address</th>
                                    <th>Supplier contact phone</th>

                                </tr>
                                        
                                @foreach (var ingredient in Model.AllIngredientSuppliersList)
                                {
                                    <tr>
                                        <td>@ingredient.SupplierName</td>
                                        <td>@ingredient.Address</td>
                                        <td>@ingredient.Phone</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IngredientId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
