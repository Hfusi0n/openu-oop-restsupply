<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RestSupply</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="control-label ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rest Supply", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
        <div class="container-fluid">
            <ul class="nav navbar-header navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("ספקים", "Index", "Suppliers")</li>
                <li>@Html.ActionLink("חומרי גלם", "Index", "Ingredients")</li>
                <li>@Html.ActionLink("תפריט", "Index", "MenuItems")</li>

            </ul>
            <ul class="nav navbar-header navbar-nav ">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
        <div class="container body-content bottom">
            @RenderBody()
            <hr />
        </div>
    </div>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
