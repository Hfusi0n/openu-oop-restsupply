<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RestSupply</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="control-label ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-left"><img style="width: 60px;" src="https://drive.google.com/thumbnail?id=1qYDQ8hBkYlTlkSIfRZuln_7WhbrcOYBn"></a>
            </div>
        </div>
        <div class="container-fluid">
            <ul class="nav navbar-header navbar-nav">
                <li class="active">
                    <a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a>
                </li>
                <li>
                    <a href="@Url.Action("About", "Home")">
                        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> About
                    </a>
                </li>
                <li><a href="#"><span class="glyphicon glyphicon-envelope"></span> Contact</a></li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container body-content bottom">
        @RenderBody()
        <hr />
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Site")

    @RenderSection("scripts", required: false)
</body>
</html>
