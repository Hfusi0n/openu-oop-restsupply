@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin;
@using RestSupplyDB.Models.AppUser;

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-nav navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li class="menu">
            <a href="index.html" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Menu <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Index", "Suppliers")">Suppliers</a></li>
                <li><a href="@Url.Action("Index", "Kitchens")">Branches</a></li>
                <li><a href="@Url.Action("Index", "Ingredients")">Ingredients</a></li>
                <li><a href="@Url.Action("Index", "MenuItems")">Menu</a></li>
                <li><a href="@Url.Action("Index", "SupplierOrder")">Supplier Orders</a></li>
                <li><a href="@Url.Action("Admin", "UserDashboard")">Admin Dashboard</a></li>
            </ul>
        </li>

        <li class="menu">
            <a href="@Url.Action("Index", "Manage")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                @{ 
                    // Get the user current role
                    var userManager = Request.GetOwinContext().GetUserManager<AppUserManager>();
                    var userRoles = userManager.GetRoles(User.Identity.GetUserId());
                    var userRole = userRoles.FirstOrDefault();

                    // Get the current user 
                    var user = userManager.FindById(User.Identity.GetUserId());

                    // construct the display name
                    string userName = user.Email;

                    if(!string.IsNullOrEmpty(user.FirstName))
                    {
                        userName = user.FirstName + " " + user.LastName;
                    }

                    string displayName = userName + "(" + userRole + ")";
                }
                @displayName
            </a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("ChangePassword", "Account")">שנה סיסמא</a></li>
            </ul>
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                Log off
            </a>
        </li>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Register", "Account")" id="registerLink">
                Not around here? Sign up
            </a>
        </li>
        <li>
            <a href="@Url.Action("Login", "Account")" id="loginLink">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                Log in
            </a>
        </li>
    </ul>
}
