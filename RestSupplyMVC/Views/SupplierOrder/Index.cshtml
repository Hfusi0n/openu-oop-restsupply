@model RestSupplyMVC.ViewModels.OrdersViewModel

@{
    ViewBag.Title = "Suppliers Orders";
}

<h2>Supplier Orders</h2>
<h4>For Kitchen: @Model.KitchenName</h4>

<table class="table">

    @if (Model.Orders.Any())
    {
        <tr>
            
                <td>
                    <b>   @Html.DisplayNameFor(modelItem => modelItem.Orders.First().OrderDate)</b>
                </td>
                <td>
                    <b> @Html.DisplayNameFor(modelItem => modelItem.Orders.First().SupplierName)</b>
                </td>
                <td></td>
            
        </tr>
        foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "SupplierOrder", new { kitchenId=Model.KitchenId, id = item.OrderId }, new { @id = "display-link" }) 

                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                <div class="panel-body">
                    <h3 style="color:red;">No available orders!</h3>
                </div>
            </td>
        </tr>
    }

</table>


@{

    if (Model.DisplayDetails)
    {
        <div class="modal fade modal-order-edit" id="display-details-modal">
            <div class="modal-dialog modal-lg" style=" width: 900px !important;">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4>Ordered Ingredients</h4>
                    </div>
                    <div class="modal-body">
                        @{
                            var item = Model.Orders.First(m => m.OrderId == Model.ModalOrderId);

                            if (item.SupplierOrderIngredientsList.Any())
                            {
                        <table class="table">
                            <b>
                            <tr>
                                <td>
                                    <b>@Html.DisplayNameFor(modelItem => item.SupplierOrderIngredientsList.First().Name)</b>
                                </td>
                                <td>
                                    <b>  @Html.DisplayNameFor(modelItem => item.SupplierOrderIngredientsList.First().Unit)</b>
                                </td>
                                <td>
                                    <b>   @Html.DisplayNameFor(modelItem => item.SupplierOrderIngredientsList.First().Amount)</b>
                                </td>
                            </tr>
                            </b>
                            @foreach (var ingredientOrder in item.SupplierOrderIngredientsList)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingredientOrder.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingredientOrder.Unit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ingredientOrder.Amount)
                                    </td>
                                </tr>
                            }
                        </table>
                            }
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @section scripts{
            <script>
                // Show the modal
                $("#display-details-modal").modal('show');
            </script>
        }
    }

}


