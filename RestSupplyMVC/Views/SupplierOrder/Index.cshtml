@model RestSupplyMVC.ViewModels.OrdersViewModel

@{
    ViewBag.Title = "Suppliers Orders";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>Orders</th>
    </tr>
    @if (Model.Orders.Any())
    {
        foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "SupplierOrder", new { id = item.OrderId }, new { @id = "edit-link" }) |
                    @Html.ActionLink("Details", "Details", "SupplierOrder", new { id = item.OrderId }, new { @id = "display-link" }) |
                    @Html.ActionLink("Delete", "Delete", "SupplierOrder", new { id = item.OrderId }, new { @id = "delete-link" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                <div class="panel-body">
                    <h3 style="color:red;">No available orders!</h3>
                </div>
            </td>
        </tr>
    }

</table>


@{
    // Check if an order was posted to this view, if so display the relevant modals
    if (Model.DisplayEdit)
    {
        @Html.Partial("_DisplayOrderEdit")
    }

    if (Model.DisplayDetails)
    {
        <div class="modal fade modal-order-edit" id="display-details-modal">
            <div class="modal-dialog modal-lg" style=" width: 900px !important;">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4>Order Details</h4>
                    </div>
                    <div class="modal-body">
                        @{
                            var item = Model.Orders.First(m => m.OrderId == Model.ModalOrderId);

                            if (item.SupplierOrderIngredientsList.Any())
                            {
                                <table class="table">
                                    @foreach (var ingredientOrder in item.SupplierOrderIngredientsList)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => ingredientOrder.OrderIngredientId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => ingredientOrder.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => ingredientOrder.OrderDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => ingredientOrder.Unit)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => ingredientOrder.Amount)
                                        </td>
                                    </tr>
                                    }
                                </table>
                            }
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @section scripts{
            <script>
                // Show the modal
                $("#display-details-modal").modal('show');
            </script>
        }
    }

    if (Model.DisplayDelete)
    {
        @Html.Partial("_DisplayOrderDelete")
    }
}


