@model RestSupplyMVC.ViewModels.SupplierOrderIndexViewModel

@{
    ViewBag.Title = "הזמנות חומרי גלם";
}

<h2>Index</h2>

<table class="table">
    <tr>

        <th></th>
    </tr>
    @if (Model.SupplierOrdersList.Count() != 0)
    {
        foreach (var item in Model.SupplierOrdersList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
                </td>
            </tr>
        }
    }
    else
    {
        <div class="panel-body">
            <h3 style="color:red;">אין הזמנות חומרי גלם!</h3>
        </div>
    }


</table>


