@model RestSupplyMVC.ViewModels.SupplierOrderViewModel

@{
    ViewBag.Title = "Supplier Info";
}
<style type="text/css">.delbtn { }</style>

<h2>Supplier Info</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <div class="panel-body">
                <table class="table table-striped table-responsive" id="supIng">
                    @Html.HiddenFor(model => model.Id, new {id ="MainSupplierId"})
                    <tbody>
                    <tr>
                        <td><b>Supplier Name:</b> @Model.SupplierName </ td >
                        <td> <b>Address:</b>@Model.Address </ td >
                        <td><b>Phone:</b> @Model.Phone </ td >
                        <td> @Html.ActionLink("Edit", "Edit", new {id = Model.Id})</ td >

                    </tr>
                    <tr>
                        <td colspan="3">
                            <table class="table table-bordered" id="main-data">

                                <tr>
                                    <th>hiddenId</th>
                                    <th>Ingredient</th>
                                    <th>Unit</th>
                                    <th style="width: 15%"> Actions</th>

                                </tr>
                                <tbody>
                                @foreach (var ingredient in Model.AllSupplierIngredientsList)
                                {
                                    <tr>
                                        <td class="nr">@ingredient.IngredientId</td>
                                        <td>@ingredient.Name</td>
                                        <td>@ingredient.Unit</td>

                                        <td><button type="button" class="delbtn">Remove</button></td>

                                    </tr>
                                }
                                </tbody>
                                <div id="res"></div>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <p>
                    <button style="margin-right:10px" class="btn btn-primary " onclick="addIngredient()">Add Ingredients</button>
                </p>
                <p>
                    <button style="margin-right:10px" class="btn btn-primary " onclick="addNewOrder()">Make an order</button>
                </p>
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<div class="modal fade" id="newIngredientModal">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Add Ingredients For supplier</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    <h5 style="color:#112247">Pick ingredients</h5>
                    <hr />
                    <div class="form-horizontal">

                        @Html.HiddenFor(model => model.Id, new { id = "SupplierId1" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", disabled = "disabled", @Value = Model.SupplierName })
                            </div>
                        </div>
                    </div>

                    @*Select Ingredient*@
                    <h5 style="margin-top:10px;color:#112247">Order Details</h5>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                הוסף חומר גלם
                            </label>
                            <div class="col-md-4">
                                
                                @Html.DropDownListFor(model => model.NotAssociatedIngredients, new SelectList(Model.NotAssociatedIngredients, "IngredientId", "Name"), "", new {@id = "ingredient1", @class = "form-control"})
                            </div>
                            <label class="control-label col-md-2">
                                Unit
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="unit1" name="unit" placeholder="Unit" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1 col-lg-offset-1">
                                <a id="addIngToList" class="btn btn-primary">Add Item</a>
                            </div>

                        </div>
                        <table id="ingTable" class="table">
                            <thead>
                                <tr>
                                    <th style="width:5%"></th> @*hidden IngredientId column*@
                                    <th style="width: 25%">Ingredient</th>
                                    <th style="width: 15%"> Unit</th>


                                    <th style="width: 10%"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="addIngredients" type="submit" class="btn btn-danger">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Create a new Order</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    <h5 style="color:#112247">Ingredients Order</h5>
                    <hr />
                    <div class="form-horizontal">

                        @Html.HiddenFor(model => model.Id, new {id ="SupplierId"})
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control" , disabled = "disabled" , @Value = Model.SupplierName})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", disabled = "disabled", @Value = Model.Address })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", disabled = "disabled", @Value = Model.Phone })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Kitchen", new { @class = "col-md-2 control-label" })

                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.UserKitchens, new SelectList(Model.UserKitchens, "KitchenId", "KitchenName"), "Select Kitchen", new { @id = "kitchen", @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    @*Order Details*@
                    <h5 style="margin-top:10px;color:#112247">Order Details</h5>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                           
                            <label class="control-label col-md-2">
                                Order Ingredients
                            </label>
                            <div class="col-md-4">
                                @*
        @Html.DropDownListFor(model => model.AllSupplierIngredientsList, new SelectList(""), "", new {@id = "ingredient", @class = "form-control"})
                                *@
                                <select class="form-control" id="ingredient" name="ingredient"></select>
                            </div>
                            <label class="control-label col-md-2">
                                Quantity
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="amount" name="amount" placeholder="quantity" class="form-control"/>
                            </div>
                            <label class="control-label col-md-2">
                                Unit
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="unit" name="unit" placeholder="unit" class="form-control" disabled="disabled"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-1 col-lg-offset-1">
                                <a id="addToList" class="btn btn-primary">Add Item</a>
                            </div>

                        </div>
                        <table id="detailsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="width:5%"></th> @*hidden IngredientId column*@
                                    <th style="width: 35%">Ingredient</th>
                                    <th style="width: 25%">Quantity</th>
                                    <th style="width: 25%"> Unit</th>

                                    <th style="width: 10%"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="saveSupplierOrder" type="submit" class="btn btn-danger">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script>
        // hid InredientId column upon page load
        $( document ).ready(function() {
            $('table#main-data td:nth-child(1), table#main-data th:nth-child(1)').hide();

        });
        // Remove ingredient from supplier 
        $(".delbtn").click(function () {
            //var id = $("#supIng").find(".nr:first").text();
            var $item = $(this).closest("tr")   // Finds the closest row <tr> 
                .find(".nr")     // Gets a descendent with class="nr"
                .text(); 
             
            $("#res").append($item); // Testing: append the contents of the td to a div

            return $.ajax({
                url: "/Suppliers/RemoveIngredientFromSupplier",
                data: { 'ingredientId': $item, 'supplierId': $("#MainSupplierId").val() },
                type: 'POST',
                dataType: "json",
                cache: false,
                success: function(result) {
                        alert(result);
                        location.reload();
                },
                error: function () {
                    alert("Error finding unit for ingredient!");
                }
            });
        });

        // Get unit for selected ingredient (New Order Modal)
        $("#ingredient").change(function() {
            return $.ajax({
                url: "/Ingredients/GetUnitByIngredientId",
                data: { 'id': $("#ingredient option:selected").val() },
                type: 'GET',
                dataType: "json",
                cache: false,
                success: function(response) {
                    $("#unit").val(response);
                },
                error: function() {
                    alert("Error finding unit for ingredient!");
                }
            });
        });


        // Get ingredients for selected kitchen (New Order Modal)
        $("#kitchen").change(function() {
            if ($("#kitchen option:selected").val() === "") {
                var s = '<option value="-1">No Kitchen Selected</option>';
                $("#ingredient").html(s);
                $("#unit").val("");
                $("#amount").val("");
            } else {
                return $.ajax({
                    url: "/Kitchens/GetIngredientsByKitchenId",
                    data: { 'kitchenId': $("#kitchen option:selected").val() },
                    type: 'GET',
                    dataType: "json",
                    cache: false,
                    success: function(response) {
                        if (response.length > 0) {
                            var s = '<option value="-1">Select Ingredient</option>';
                            for (var i = 0; i < response.length; i++) {
                                s += '<option value="' +
                                    response[i].IngredientId +
                                    '">' +
                                    response[i].Name +
                                    '</option>';
                            }
                            $("#ingredient").html(s);
                        } else {
                            var n = '<option value="-1">No Ingredients</option>';
                            $("#ingredient").html(n);

                        }
                    },
                    error: function() {
                        alert("Error finding ingredients for kitchen!");
                    }
                });
            }
        });


        // Get unit for selected ingredient (New ingredient Modal)
        $("#ingredient1").change(function() {
            return $.ajax({
                url: "/Ingredients/GetUnitByIngredientId",
                data: { 'id': $("#ingredient1 option:selected").val() },
                type: 'GET',
                dataType: "json",
                cache: false,
                success: function(response) {
                    $("#unit1").val(response);
                },
                error: function() {
                    alert("Error finding unit for ingredient!");
                }
            });
        });

        // ------Show Add ingredient Modal-------
        function addIngredient() {
            $("#newIngredientModal").modal();
            // Hiding the IngredientId column
            $('table#ingTable td:nth-child(1), table#ingTable th:nth-child(1)').hide();
        }

        //Add Multiple Ingredients.
        $("#addIngToList").click(function(e) {
            e.preventDefault();

            if ($.trim($("#ingredient1").val()) == "") return;

            var id = $("#ingredient1 option:selected").val(),
                name = $("#ingredient1 option:selected").text(),
                unit = $("#unit1").val(),

                detailsTableBody = $("#ingTable tbody");

            var productItem = '<tr><td>' +
                id +
                '</td><td>' +
                name +
                '</td><td>' +
                unit +
                '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(productItem);

            // Hiding the IngredientId column
            $('table#ingTable td:nth-child(1),table#ingTable th:nth-child(1)').hide();

            clearIngItem();

        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearIngItem() {
            $("#name option:selected").remove();
        }

        //After Click Save Button Pass All Data View To Controller For Save Database
        function addSupplierIngredients(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Suppliers/AddSupplierIngredients",
                data: data,
                success: function(result) {
                    alert(result);
                    location.reload();
                },
                error: function() {
                    alert("Error!");
                }
            });
        };

        //Collect Multiple Ingredient List For Pass To Controller
        $("#addIngredients").click(function(e) {
            e.preventDefault();

            var ingredientsArr = [];
            ingredientsArr.length = 0;

            $.each($("#ingTable tbody tr"),
                function() {
                    ingredientsArr.push({
                        ingredientId: $(this).find('td:eq(0)').html()
                    });
                });


            var data = JSON.stringify({
                supplierId: $("#SupplierId1").val(),
                ingredients: ingredientsArr

            });

            $.when(addSupplierIngredients(data)).then(function(response) {
                console.log(response);
            }).fail(function(err) {
                console.log(err);
            });
        });

        //-----------------------Show New Supplier Order Modal---------------------
        function addNewOrder() {
            $("#newOrderModal").modal();
            // Hiding the IngredientId column
            $('table#detailsTable td:nth-child(1), table#detailsTable th:nth-child(1)').hide();
        }

        //Add Multiple Ingredients.
        $("#addToList").click(function(e) {
            e.preventDefault();

            if ($.trim($("#ingredient").val()) == "" || $.trim($("#amount").val()) == "") return;

            var id = $("#ingredient option:selected").val(),
                name = $("#ingredient option:selected").text(),
                amount = $("#amount").val(),
                unit = $("#unit").val(),

                detailsTableBody = $("#detailsTable tbody");

            var productItem = '<tr><td>' +
                id +
                '</td><td>' +
                name +
                '</td><td>' +
                amount +
                '</td><td>' +
                unit +
                '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(productItem);

            // Hiding the IngredientId column
            $('table#detailsTable td:nth-child(1),table#detailsTable th:nth-child(1)').hide();

            clearItem();

        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#name option:selected").remove();
        }

        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click',
            'a.deleteItem',
            function(e) {
                e.preventDefault();
                var $self = $(this);
                if ($(this).attr('data-itemId') == "0") {
                    $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800,
                        function() {
                            $(this).remove();
                        });
                }
            });

        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveSupplierOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/SupplierOrder/SaveSupplierOrder",
                data: data,
                success: function(result) {
                    alert(result);
                    location.reload();
                },
                error: function() {
                    alert("Error!");
                }
            });
        };

        //Collect Multiple Order List For Pass To Controller
        $("#saveSupplierOrder").click(function(e) {
            e.preventDefault();

            var ingredientsArr = [];
            ingredientsArr.length = 0;

            $.each($("#detailsTable tbody tr"),
                function() {
                    ingredientsArr.push({
                        ingredientId: $(this).find('td:eq(0)').html(),
                        amount: $(this).find('td:eq(2)').html(),

                    });
                });


            var data = JSON.stringify({
                supplierId: $("#SupplierId").val(),
                kitchenId: $("#kitchen").val(),
                ingredients: ingredientsArr
            });

            $.when(saveSupplierOrder(data)).then(function(response) {
                console.log(response);
            }).fail(function(err) {
                console.log(err);
            });
        });
    </script>
}